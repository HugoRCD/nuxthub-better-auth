{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "auth:schema": "npx @better-auth/cli generate --config server/utils/auth.ts --output server/database/schema/auth.ts -y && eslint . --fix",
    "db:generate": "drizzle-kit generate --config ./server/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./server/database/drizzle.config.ts",
    "db:push": "drizzle-kit push --config ./server/database/drizzle.config.ts"
  },
  "dependencies": {
    "@iconify-json/heroicons": "^1.2.2",
    "@iconify-json/lucide": "^1.2.55",
    "@iconify-json/simple-icons": "^1.2.41",
    "@nuxt/ui-pro": "^3.2.0",
    "@shelve/cli": "^4.1.6",
    "@vueuse/core": "^13.5.0",
    "better-auth": "^1.2.12",
    "drizzle-orm": "^0.44.2",
    "ioredis": "^5.6.1",
    "nuxt": "^3.17.6",
    "pg": "^8.16.3",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^3.0.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "typescript": "^5.8.3",
    "vue-tsc": "^3.0.1",
    "wrangler": "^4.23.0"
  },
  "packageManager": "pnpm@10.12.4"
}
